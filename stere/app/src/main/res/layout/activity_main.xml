<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="top"
        app:cardBackgroundColor="@color/Bejesada">


        <TextView
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="50dp"
            android:text="SLEEP ALL DAY"
            android:textSize="30dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="95dp"
            android:text="TODAY 8:45 AM"
            android:textSize="25dp" />


        <ImageView
            android:layout_width="160dp"
            android:layout_height="170dp"
            android:layout_gravity="end"
            android:layout_marginTop="80dp"
            android:background="@drawable/cadeira_beje" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/Laranjada">


        <TextView
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="50dp"
            android:text="BOOK CLUB"
            android:textColor="#fff"
            android:textSize="30dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="95dp"
            android:text="TOMORROW 2:45 PM"
            android:textSize="25dp" />


        <ImageView
            android:layout_width="160dp"
            android:layout_height="170dp"
            android:layout_gravity="end"
            android:layout_marginTop="80dp"
            android:background="@drawable/cadeira_laranjapngzada" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="@color/verdeno">

        <TextView
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="50dp"
            android:text="DESIGNER PARTY"
            android:textColor="#fff"
            android:textSize="30dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="95dp"
            android:text="3 MAY 12:30 PM"
            android:textSize="25dp" />


        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_gravity="end"
            android:layout_marginTop="80dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/cadeiraamarela" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="end"
        app:cardBackgroundColor="@color/Bejesada">




    </androidx.cardview.widget.CardView>

</LinearLayout>
